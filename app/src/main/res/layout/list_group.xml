<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rel_group"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_question"
        android:text="Question"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/paddingLeft"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/txt_question"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/paddingLeft" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="60dp"
        android:text="Id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/paddingLeft"
        android:textColor="@android:color/black"
         />

    <TextView
        android:id="@+id/txt_user_id"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/txt_id"
        android:layout_marginLeft="60dp"
        android:text="User id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/paddingLeft"
        android:textColor="@android:color/black"
         />

    <RelativeLayout
        android:id="@+id/rel_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image">

        <TextView
            android:id="@+id/txt_message"
            android:layout_toLeftOf="@+id/btn_edit"
            android:text="Message"
            android:maxLines="2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeft"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/btn_edit"
            android:text="Edit"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lin_comments"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingLeft"
        android:layout_below="@+id/rel_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>